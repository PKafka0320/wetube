doctype html
html(lang="ko")
    head
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        title #{pageTitle} | Wetube
    body
        header
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") Home
                    li 
                        a(href="/videos/upload") Upload Video
                    li 
                        a(href="/search") Search
                    if !loggedIn
                        li 
                            a(href="/login") Login
                        li 
                            a(href="/join") Join
                    else
                        li
                            a(href="/profile") #{user.name}'s Profile
                        li
                            a(href="/users/logout") Logout
        main
            block content
    include partials/footer